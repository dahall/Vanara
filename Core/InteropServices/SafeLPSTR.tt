	/// <summary>Determines whether the specified <see cref="<#= classes[i] #>"/>, is equal to this instance.</summary>
	/// <param name="other">The <see cref="<#= classes[i] #>"/> to compare with this instance.</param>
	/// <returns><c>true</c> if the specified <see cref="<#= classes[i] #>"/> is equal to this instance; otherwise, <c>false</c>.</returns>
