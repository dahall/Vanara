	/// <returns>A <see cref="string"/> that represents this instance.</returns>
	public override readonly string ToString() => StringHelper.GetString(ptr, thisCharSet) ?? "null";

	/// <summary>Performs an implicit conversion from <see cref="<#= classes[i] #>"/> to <see cref="string"/>.</summary>
	/// <param name="p">The <see cref="<#= classes[i] #>"/> instance.</param>
